@import url('http://fonts.googleapis.com/css?family=Ruslan+Display|Syncopate|Ubuntu')
.log-block
  background #0092D0
  padding 0px
  height 60px
  display none
  .form-login
    width 480px
    float right
    input
      border none!important
      padding 0 10px
      margin 15px 0
      font-size 14px
      height 30px
      line-height 30px
      border 2px solid #0092D0
    input[type=text]
      display inline-block
      vertical-align top
      color #888
    input[type=password]
      display inline-block
      vertical-align top
      color #888
    input[type=submit]
      display inline-block
      vertical-align top
      background #4cb2de
      color #fff
      &:hover
        background #262B2F
        transition all ease 0.5s
        -moz-transition all ease 0.5s
        -webkit-transition all ease 0.5s
        -o-transition all ease 0.5s
body
	background #323B43

#menu
  background #323B43
  height 30px

  ul
    margin 0
    padding 0 10px

    a
      color #787C80
      font-weight bold
      margin 5px 10px
      text-decoration none
      width 150px

#cabecera
  background #262B2F
  height 80px
  border-bottom 2px solid #0092D0

  .thesgo
    display inline-block
    font-family: Rammetto One, cursive
    font-size: 50px
    color #0092D0
    margin 0

    width 500px
  .userArea
    display inline-block
    float right
    width 500px
    a
      color #D0D1D2
